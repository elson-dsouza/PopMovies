<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight">
        <item name="colorAccent">#DFA100</item>
        <item name="toolbarStyle">@style/Widget.MaterialComponents.Toolbar.Primary</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="SplashTheme" parent="AppTheme.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_drawable</item>
    </style>

    <style name="TabTextSize" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">11.5sp</item>
    </style>

    <style name="FavouriteButtonStyle" parent="Widget.MaterialComponents.CompoundButton.CheckBox">
        <item name="materialThemeOverlay">@style/FavouriteButtonStyle.MaterialThemeOverlay</item>
    </style>

    <style name="FavouriteButtonStyle.MaterialThemeOverlay" parent="">
        <item name="colorAccent">?attr/colorError</item>
    </style>

    <style name="Divider">
        <item name="android:background">?android:attr/listDivider</item>
    </style>
</resources>
